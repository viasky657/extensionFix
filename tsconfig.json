{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "useUnknownInCatchVariables": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "src/webviews"
  ]
}